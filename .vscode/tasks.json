// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "build",
      "problemMatcher": ["$ts-webpack", "$tslint-webpack"],
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "watch-web",
      "problemMatcher": ["$ts-webpack-watch", "$tslint-webpack-watch"],
      "isBackground": true,
      "group": { "kind": "build" }
    }
  ]
}
