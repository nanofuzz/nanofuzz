{
  "spec_dir": "",
  "spec_files": [
    "src/**/*[sS]pec.ts",
    "src/**/*[sS]pec.?(m)js",
    "src/**/*[tT]est.ts",
    "src/**/*[tT]est.?(m)js"
  ],
  "helpers": ["spec/helpers/babel.cjs", "spec/helpers/**/*.{js,ts}"],
  "env": {
    "stopSpecOnExpectationFailure": false,
    "failSpecWithNoExpectations": true,
    "random": true,
    "forbidDuplicateNames": true
  }
}
